source "https://rubygems.org"

# GitHub Pages will specify the necessary Jekyll version
gem "github-pages", "~> 228", group: :jekyll_plugins

# Plug-ins
group :jekyll_plugins do
  gem "jekyll-archives"
  gem "jekyll-feed"
  gem "jekyll-include-cache"
end

# Extra dep needed for Ruby >= 3
gem "webrick", "~> 1.8"
